{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/.varmint",
			"!**/build",
			"!**/coverage",
			"!**/dist",
			"!**/generated",
			"!**/node_modules"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"includes": [
			"**",
			"!**/build",
			"!**/server-build",
			"!**/dist",
			"!**/node_modules",
			"!**/coverage"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"useLiteralKeys": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useImportType": "off",
				"noParameterAssign": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error",
				"useNumberNamespace": "error",
				"noInferrableTypes": "error",
				"noUselessElse": "error"
			},
			"suspicious": {},
			"correctness": {
				"useValidTypeof": "off"
			}
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "off" } } }
}
